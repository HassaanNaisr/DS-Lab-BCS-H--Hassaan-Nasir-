#include <iostream>
using namespace std;

int main()
{
    int array[10];
    for (int i = 0;i < 10;i++)
    {
        cout << "Enter a number to input in the array : " << endl;
        cin >> array[i];
    }
    cout << "Unsorted array : ";
    for (int i = 0;i < 10;i++)
    {
        cout << array[i] << ",";
    }
    cout << endl;
    
    for (int i = 0;i < 10;i++)
    {
        int minIndex = i;
        for (int j = i+1;j < 10;j++)
        {
            if (array[j] < array[minIndex])
            {
                minIndex = j;
            }
        }
        int temp = array[i];
        array[i] = array[minIndex];
        array[minIndex] = temp;
    }
    cout << "Sorted array : ";
    for (int i = 0;i < 10;i++)
    {
        cout << array[i] << ",";
    }
    cout << endl;
}
