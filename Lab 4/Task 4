#include <iostream>
using namespace std;

int main()
{
    int array[10];
    for (int i = 0;i < 10;i++)
    {
        cout << "Enter a number to input in the array : " << endl;
        cin >> array[i];
    }
    cout << "Unsorted array : ";
    for (int i = 0;i < 10;i++)
    {
        cout << array[i] << ",";
    }
    cout << endl;
    
    for (int i = 1;i < 10;i++)
    {
        int num = array[i];
        int j = i - 1;
        while (j >= 0 && array[j] > num)
        {
            array[j + 1] = array[j];
            j--;
        }
        array[j + 1] = num;
    }
    
    cout << "Sorted array : ";
    for (int i = 0;i < 10;i++)
    {
        cout << array[i] << ",";
    }
    cout << endl;
    
    int num1;
    cout << "Enter a number to search for in the array using binary search : " << endl;
    cin >> num1;
    
    int left = 0;
    int right = 9;
    
    while (left <= right)
    {
        int mid = left + (right - left)/2;
        if (num1 == array[mid])
        {
            cout << "The number " << num1 << " was found at the index : " << mid;
            return 1;
        }
        else if (num1 > mid)
        {
            left = left + 1;
        }
        else
        {
            right = right - 1;
        }
    }
    cout << "The number does not exist in this array" << endl;
}
