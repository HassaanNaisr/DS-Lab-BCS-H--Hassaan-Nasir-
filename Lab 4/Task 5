#include <iostream>
using namespace std;

int main()
{
   int array[5];
   cout << "Enter Values into the array which are uniformally distributed : " << endl;
   int difference;
   int flag = 1;
   while (flag == 1)
   {
       for (int i = 0;i < 5;i++)
       {
           cin >> array[i];
           if (i == 1)
           {
               difference = array[i] - array[i-1];
           }
           if (i > 1)
           {
               if ((array[i]-array[i-1]) == difference)
               {
                   flag = 1;
               }
               else
               {
                   flag = 0;
                   cout << "Invalid array value entered";
                   return 1;
               }
           }
           flag = 0;
       }
   }
   for (int i = 0; i < 4; i++)
    {
        for (int j = 0; j < 4 - i; j++)
        {
            if (array[j] > array[j + 1])
            {
                int temp = array[j];
                array[j] = array[j + 1];
                array[j + 1] = temp;
            }
        }
    }
    
    int target;
    cout << "Enter a value to search for in the array using interpolation search" << endl;
    cin >> target;
    int left = 0;
    int right = 4;
    while (left <= right && target >> array[left] && array[right])
    {
        int pos = left + ((target - array[left])*(right - left))/(array[right] - array[left]);
        
        if (array[pos] == target)
        {
            cout << "The value " << target << " was found at index : " << pos << endl;
            return 1;
        }
        if (target > array[pos])
        {
            left = pos + 1;
        }
        if (target < array[pos])
        {
            right = pos - 1;
        }
    }
    cout << "The value " << target << " is not in the array" << endl;
}
