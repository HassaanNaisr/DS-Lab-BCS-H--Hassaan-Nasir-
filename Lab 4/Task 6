#include <iostream>
using namespace std;

int main()
{
    int arr[10];
    cout << "Enter values into the array : " << endl;
    for (int i = 0; i < 10; i++)
    {
        cin >> arr[i];
    }

    int comparisons = 0;
    int swaps = 0;
    int gap = 10;
    bool swapped = true;

    while (gap != 1 || swapped)
    {
        gap = (gap * 10) / 13;
        if (gap < 1)
        {
            gap = 1;
        }
        swapped = false;
        for (int i = 0; i + gap < 10; i++)
        {
            comparisons++;
            if (arr[i] > arr[i + gap])
            {
                int temp = arr[i];
                arr[i] = arr[i + gap];
                arr[i + gap] = temp;
                swaps++;
                swapped = true;
            }
        }
    }

    cout << "Sorted array: ";
    for (int i = 0; i < 10; i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;
    cout << "Total comparisons: " << comparisons << endl;
    cout << "Total swaps: " << swaps << endl;
}
