#include <iostream>
using namespace std;

int main()
{
    int num;
    cout << "Enter a size for the array" << endl;
    cin >> num;
    
    int *array = new int[num];
    for (int i = 0;i < num;i++)
    {
        array[i] == 0;
    }
    
    for (int i = 0;i < num;i++)
    {
        cout << "Enter a value to add to the array at index : " << i + 1 << endl;
        cin >> array[i];
    }
    
    for (int i = 0;i < num;i++)
    {
        cout << array[i];
    }
    delete array;
}
