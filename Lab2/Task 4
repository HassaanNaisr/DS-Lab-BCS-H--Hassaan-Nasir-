#include <iostream>
using namespace std;

int main()
{
    int n;
    float total = 0.0;
    float avg = 0.0;

    cout << "Enter the number of months to track initially: ";
    cin >> n;

    float *expenses = new float[n];

    for (int i = 0; i < n; i++)
    {
        cout << "Enter the expenses for month " << i + 1 << ": ";
        cin >> expenses[i];
        total += expenses[i];
    }

    char choice;
    do
    {
        cout << "Do you want to track more months? (y/n): ";
        cin >> choice;

        if (choice == 'y' || choice == 'Y')
        {
            int m;
            cout << "Enter the additional number of months: ";
            cin >> m;

            float *newexpenses = new float[n + m];

            for (int i = 0; i < n; i++)
            {
                newexpenses[i] = expenses[i];
            }

            for (int i = n; i < n + m; i++)
            {
                cout << "Enter the expenses for month " << i + 1 << ": ";
                cin >> newexpenses[i];
                total += newexpenses[i];
            }

            n += m;
            delete[] expenses;
            expenses = expenses;
        }

    } while (choice == 'y' || choice == 'Y');

    avg = total / n;

    cout << "The total expenses for " << n << " months is: " << total << endl;
    cout << "The average expense for each month is: " << avg << endl;

    delete[] expenses;

    return 0;
}
