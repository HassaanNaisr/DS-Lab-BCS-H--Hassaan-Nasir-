#include <iostream>
using namespace std;

int main()
{
    int n, m;
    cout << "Enter number of rows: ";
    cin >> n;
    cout << "Enter number of columns: ";
    cin >> m;

    int** matrix = new int*[n];
    cout << "Enter matrix elements:" << endl;
    for(int i = 0; i < n; i++)
    {
        matrix[i] = new int[m];
        for(int j = 0; j < m; j++)
        {
            cin >> matrix[i][j];
        }
    }

    cout << "Matrix in normal form:" << endl;
    for(int i = 0; i < n; i++)
    {
        for(int j = 0; j < m; j++)
        {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }

    cout << "Matrix in compressed form (row, column, value):" << endl;
    for(int i = 0; i < n; i++)
    {
        for(int j = 0; j < m; j++)
        {
            if(matrix[i][j] != 0)
            {
                cout << i << " " << j << " " << matrix[i][j] << endl;
            }
        }
    }

    for(int i = 0; i < n; i++)
    {
        delete[] matrix[i];
    }
    delete[] matrix;

    return 0;
}
