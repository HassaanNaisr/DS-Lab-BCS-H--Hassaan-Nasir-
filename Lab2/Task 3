#include <iostream>
using namespace std;

int main()
{
    int Students, Courses;

    cout << "Enter the number of students: ";
    cin >> Students;

    int **marks = new int*[Students];

    for (int i = 0; i < Students; i++)
    {
        cout << "Enter the number of courses for student " << i + 1 << ": ";
        cin >> Courses;

        marks[i] = new int[Courses];

        cout << "Enter marks for student " << i + 1 << ":\n";
        int sum = 0;
        for (int j = 0; j < Courses; j++)
        {
            cout << "Course " << j + 1 << ": ";
            cin >> marks[i][j];
            sum += marks[i][j];
        }

        float average = sum / float(Courses);
        cout << "Average marks for student " << i + 1 << ": " << average << endl;
    }

    for (int i = 0; i < Students; i++)
    {
        delete[] marks[i];
    }
    delete[] marks;

    return 0;
}
