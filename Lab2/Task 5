#include <iostream>
using namespace std;

void addMatrices(int **matrix1, int **matrix2, int **result, int rows, int cols)
{
    for (int i = 0; i < rows; i++)
        for (int j = 0; j < cols; j++)
            result[i][j] = matrix1[i][j] + matrix2[i][j];
}

void subtractMatrices(int **matrix1, int **matrix2, int **result, int rows, int cols)
{
    for (int i = 0; i < rows; i++)
        for (int j = 0; j < cols; j++)
            result[i][j] = matrix1[i][j] - matrix2[i][j];
}

int main()
{
    int rows1, cols1, rows2, cols2;

    cout << "Enter rows for matrix1: ";
    cin >> rows1;
    rows2 = rows1;

    cout << "Enter columns for matrix1: ";
    cin >> cols1;
    cols2 = cols1;

    int **matrix1 = new int*[rows1];
    for (int i = 0; i < rows1; i++)
        matrix1[i] = new int[cols1];

    for (int i = 0; i < rows1; i++)
        for (int j = 0; j < cols1; j++)
        {
            cout << "Enter value in matrix1 at index [" << i + 1 << "][" << j + 1 << "]: ";
            cin >> matrix1[i][j];
        }

    int **matrix2 = new int*[rows2];
    for (int i = 0; i < rows2; i++)
        matrix2[i] = new int[cols2];

    for (int i = 0; i < rows2; i++)
        for (int j = 0; j < cols2; j++)
        {
            cout << "Enter value in matrix2 at index [" << i + 1 << "][" << j + 1 << "]: ";
            cin >> matrix2[i][j];
        }

    int **sumMatrix = new int*[rows1];
    for (int i = 0; i < rows1; i++)
        sumMatrix[i] = new int[cols1];

    int **diffMatrix = new int*[rows1];
    for (int i = 0; i < rows1; i++)
        diffMatrix[i] = new int[cols1];

    addMatrices(matrix1, matrix2, sumMatrix, rows1, cols1);
    subtractMatrices(matrix1, matrix2, diffMatrix, rows1, cols1);

    cout << "\nMatrix1:" << endl;
    for (int i = 0; i < rows1; i++)
    {
        for (int j = 0; j < cols1; j++)
            cout << matrix1[i][j] << " ";
        cout << endl;
    }

    cout << "\nMatrix2:" << endl;
    for (int i = 0; i < rows2; i++)
    {
        for (int j = 0; j < cols2; j++)
            cout << matrix2[i][j] << " ";
        cout << endl;
    }

    cout << "\nSum of the matrices:" << endl;
    for (int i = 0; i < rows1; i++)
    {
        for (int j = 0; j < cols1; j++)
            cout << sumMatrix[i][j] << " ";
        cout << endl;
    }

    cout << "\nDifference of the matrices:" << endl;
    for (int i = 0; i < rows1; i++)
    {
        for (int j = 0; j < cols1; j++)
            cout << diffMatrix[i][j] << " ";
        cout << endl;
    }

    for (int i = 0; i < rows1; i++)
    {
        delete[] matrix1[i];
        delete[] sumMatrix[i];
        delete[] diffMatrix[i];
    }
    delete[] matrix1;
    delete[] sumMatrix;
    delete[] diffMatrix;

    for (int i = 0; i < rows2; i++)
        delete[] matrix2[i];
    delete[] matrix2;

    return 0;
}
