#include <iostream>
using namespace std;

int main()
{
    int rows, cols;

    cout << "Enter the number of rows/benches: ";
    cin >> rows;
    cout << "Enter the number of columns/seats per bench: ";
    cin >> cols;

    int** seatingChart = new int*[rows];
    for (int i = 0; i < rows; i++)
    {
        seatingChart[i] = new int[cols];
    }

    for (int i = 0; i < rows; i++)
    {
        for (int j = 0; j < cols; j++)
        {
            seatingChart[i][j] = 0;
        }
    }

    int row, col;
    char more;
    do
    {
        cout << "Enter the row number to fill (0 to " << rows - 1 << "): ";
        cin >> row;
        cout << "Enter the column number to fill (0 to " << cols - 1 << "): ";
        cin >> col;

        if (row >= 0 && row < rows && col >= 0 && col < cols)
        {
            seatingChart[row][col] = 1;
        }
        else
        {
            cout << "Invalid seat coordinates provided" << endl;
        }

        cout << "Do you want to fill another seat? (y/n): ";
        cin >> more;
    } while (more == 'y' || more == 'Y');

    cout << "\nFinal Seating Chart: \n";
    for (int i = 0; i < rows; i++)
    {
        for (int j = 0; j < cols; j++)
        {
            cout << seatingChart[i][j] << " ";
        }
        cout << endl;
    }

    for (int i = 0; i < rows; i++)
    {
        delete[] seatingChart[i];
    }
    delete[] seatingChart;

    return 0;
}
